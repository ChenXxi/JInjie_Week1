<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_151"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    fresco:cardCornerRadius="@dimen/dp_15"
    fresco:cardElevation="5dp"
    android:layout_height="@dimen/dp_174">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shop_icon"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102"
            android:layout_margin="@dimen/dp_10"
            fresco:placeholderImage="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:text="HelloWord"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_14"
                android:text="HelloWord"/>
            <TextView
                android:id="@+id/tv_shop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="#666666"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_10"
                android:text="HelloWord"/>
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>